import java.io.File;
import java.util.Scanner;

public class Base {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		System.out.println("Welcome to the Portal...What would you like to do today ?");
		Boolean flag = true;
		while(flag)
		{
		System.out.println("Enter: \n 1- To Retrieve the file name in Ascending Order \n 2- To Add the specified file Name \n 3- To Search the specified file Name \n 4- To exit the application");
		int a = sc.nextInt();
		
		Boolean b = performOperation(a);
		flag = false;
		}
	}
	
		private static Boolean performOperation(int a) {

			Scanner s = new Scanner(System.in);
		switch(a)
		{
			case 1:
				System.out.println("Enter the directory Path where you want to perform Search(e.g C://Anand Backup)");
				String c = s.nextLine();
				//Creating a File object for directory
			      File directoryPath = new File(c);
			      //List of all files and directories
			      String contents[] = directoryPath.list();
			     
			      System.out.println("List of files and directories in the specified directory:");
			      for(int i=0; i<contents.length; i++) {
			         System.out.println(contents[i]);
			      }
				break;
			case 2:
		}
		
			return null;
		}
}

	
	
	

